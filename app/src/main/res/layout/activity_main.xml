<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_life_in_minutes"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:id="@+id/tvLifeInMin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_dob"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="100dp"
        android:textColor="@color/red"
        android:backgroundTint="@color/navy"
        android:gravity="center"
        android:id="@+id/btnDoBPicker"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selected_date"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:id="@+id/tvDateTitle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_date_selected_yet"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:id="@+id/tvSelectedDate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="50sp"
        android:textColor="@color/navy"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_text_view"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/tvMinutes"/>

</LinearLayout>